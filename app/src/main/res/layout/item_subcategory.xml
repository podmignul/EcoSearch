<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_400sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        app:cardBackgroundColor="@color/primary"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp">

                    <ImageView
                        android:id="@+id/img_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:src="@drawable/ic_recycling_white" />

                    <TextView
                        android:id="@+id/object_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gilroy_bold"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="11"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_17sdp" />

                    <TextView
                        android:id="@+id/object_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="МАРКИРОВКА"
                        android:fontFamily="@font/gilroy_bold"
                        android:textSize="@dimen/_17sdp"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/_5sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/object_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Название"
                    android:fontFamily="@font/gilroy_light"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:textAlignment="center"/>


                <TextView
                    android:id="@+id/title_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Распространенные
                    предметы"
                    android:fontFamily="@font/gilroy_bold"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/object_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Текст"
                    android:fontFamily="@font/gilroy_light"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textAlignment="center"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>